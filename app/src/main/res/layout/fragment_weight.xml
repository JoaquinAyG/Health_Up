<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_light">

        <TextView
            android:id="@+id/tv_title_weight"
            style="@style/register_titles"
            android:text="@string/register_weight_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_weight"
            style="@style/edit_text_register"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_weight"></EditText>

        <TextView
            android:id="@+id/tv_kg_symbol"
            style="@style/symbol_register"
            android:text="@string/kg_symbol"
            app:layout_constraintBottom_toBottomOf="@id/et_weight"
            app:layout_constraintStart_toEndOf="@id/et_weight"
            app:layout_constraintTop_toTopOf="@+id/et_weight" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>