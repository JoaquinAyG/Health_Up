<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainBut">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="LinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainButDark">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="UsernameEText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="MailEText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="PasswordEText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="login_containers">
        <item name="android:layout_width">@dimen/button_main_width</item>
        <item name="android:layout_height">@dimen/button_main_height</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="LoginButtonsLanded">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="login_et">
        <item name="android:layout_width">@dimen/button_main_width</item>
        <item name="android:layout_height">@dimen/button_main_height</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="txview" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="edtext" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="register_titles">
        <item name="android:textSize">35sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginTop">@dimen/register_title_top_margin</item>
    </style>

    <style name="register_toggle_button">
        <item name="android:background">@drawable/register_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_height">@dimen/register_toggle_height</item>
        <item name="android:layout_width">@dimen/register_toggle_width</item>

    </style>

    <style name="button_next">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="edit_text">
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
    </style>

    <style name="edit_text_register">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">@color/white_dark</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="symbol_register">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white_dark</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="button_settings">
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/white_dark</item>
        <item name="android:textSize">22dp</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_rail_title">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_card_profile">
        <item name="android:layout_width">@dimen/card_width</item>
        <item name="android:layout_height">@dimen/card_height_profile</item>
        <item name="backgroundColor">@color/white_light</item>

    </style>

    <style name="text_card_profile">
        <item name="backgroundColor">@color/white_light</item>
        <item name="android:textSize">@dimen/text_size_profile</item>
        <item name="android:inputType">none</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


</resources>